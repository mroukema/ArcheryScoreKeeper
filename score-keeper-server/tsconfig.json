{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/*": ["src/*"],
      "@config/*": ["src/conf/*"],
      "@controller/*": ["src/controller/*"],
      "@model/*": ["src/model/*"],
      "@service/*": ["src/service/*"]
    }
  }
}
